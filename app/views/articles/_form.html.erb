<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :class => "form-control", :placeholder => "Enter the article's title" %>
  </div>
  <br/>
  <div class="field">
    <%= f.text_field :source_url, :class => "form-control", :placeholder => "URL of source article" %>
  </div>
  <br/>
  <div class="field">
    <%= f.text_area :body, :class => "form-control", :rows => "12" %>
  </div>
  <br/> 
  <div class="field">
    <%= f.text_field :date_published, :class => "datepicker" %>
  </div>
  <br/> 
  <div class="field">
    <%= f.select :publisher_id, @publishers.all.collect {|p| [p.name, p.id]} %>
  </div>
  <br/>
  <div class="field">
    <%= f.text_field :author_list, :class => "form-control", :placeholder => "Enter the author(s) for the article" %>
  </div>
  <br/>
  <div class="field">
    <%= f.text_field :category_list, :class => "form-control", :placeholder => "Enter the categories for the article" %>
  </div>
  <br/>
  <div class="field">
    <%= f.text_field :tag_list, :class => "form-control", :placeholder => "Enter the tag(s) for the article" %>
  </div>
  <br/> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
$(function() {
    $(".datepicker").datepicker({ dateFormat: 'dd/mm/yy' });
});
</script>
