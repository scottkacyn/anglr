<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :class => "form-control", :placeholder => "Enter the article's title" %>
  </div>
  <br/>
  <div class="field">
    <%= f.text_field :source_url, :class => "form-control", :placeholder => "URL of source article" %>
  </div>
  <div class="field">
    <%= f.text_area :body, :class => "form-control", :rows => "20" %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

